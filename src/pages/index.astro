---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-5xl font-bold">Manuel Carbajal</div>
    <div class="text-3xl py-3 font-bold">Desarrollador Backend</div>
    <div class="mt-8">
      <a class="btn btn-outline" href={import.meta.env.BASE_URL + "cv"}>Acá mi Curriculum</a>
      <a class="btn" href="https://github.com/stars/manicar2093/lists/my-golang-stack" target="_blank">Acá mi stack</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Algunos de mis proyectos</div>
  </div>

  <HorizontalCard
    title="goption"
    img="/post_img.webp"
    desc="A way to handle nil"
    url="https://github.com/manicar2093/goption"
    is_external_link
    badge="go-package"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="filestores"
    img="/post_img.webp"
    desc="Quick file store implementation"
    url="https://github.com/manicar2093/filestores"
    is_external_link
    badge="go-package"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="echoroutesview"
    img="/post_img.webp"
    desc="Easier routes viewer for echo"
    url="https://github.com/manicar2093/echoroutesview"
    is_external_link
    badge="go-package"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-2 mt-2">Algunas challenges</div>
  </div>

  <HorizontalCard
    title="Cryptocurrencies Charter"
    img="/post_img.webp"
    desc="Un challenge hecho por EDTeam"
    url="https://github.com/manicar2093/ed-team-challenge-golang"
    is_external_link
    badge="challenge"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Fetch Challenge"
    img="/post_img.webp"
    desc="Challenge hecho por la empresa Norte Americana Fetch"
    url="https://github.com/manicar2093/fetch-receipt-processor-challenge"
    is_external_link
    badge="challenge"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Challenge Fondeadora"
    img="/post_img.webp"
    desc="REST API hecho en Python"
    url="https://github.com/manicar2093/fondeadora-technical-test"
    is_external_link
    badge="challenge"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Lo último de mi blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
